<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05"
        android:id="@+id/glv5"
        android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:id="@+id/glv95"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".95"
        android:layout_height="wrap_content" />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".15"
        android:id="@+id/glv15"
        android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:id="@+id/glv85"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".85"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".25"
        android:id="@+id/glv25"
        android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:id="@+id/glv75"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75"
        android:layout_height="wrap_content" />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".3"
        android:id="@+id/glv30"
        android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:id="@+id/glv70"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".70"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1"
        android:id="@+id/glv10"
        android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:id="@+id/glv90"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".90"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glv20"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glv80"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".80" />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:id="@+id/glv50"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".6"
        android:layout_height="wrap_content" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_actionBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/glv20"
        app:layout_constraintRight_toRightOf="@id/glv80"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:lottie_autoPlay="true"
        app:lottie_fileName="splashloader.json"
        app:lottie_loop="true" />







    <info.umer.carhakeem.UI.Custom.TextView_N
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/lav_actionBar"
        android:layout_height="wrap_content"

        android:id="@+id/tvHeader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textSize="30sp"
        android:text="SIGN IN"

        />




    <RelativeLayout
        android:layout_width="0dp"
        android:id="@+id/rlMobileNo"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="@id/glv10"
        app:layout_constraintRight_toRightOf="@id/glv90">

        <info.umer.carhakeem.UI.Custom.TextView_N
            android:layout_width="match_parent"
            android:text="Mobile Number"
            android:id="@+id/tvMobileNo"
            android:textColor="#8F92A1"
            android:layout_height="wrap_content"/>


        <info.umer.carhakeem.UI.Custom.EditText_N
            android:id="@+id/etMobileNo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tvMobileNo"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:hint="Enter Mobile Number"
            android:inputType="phone"
            android:maxLength="11"
            app:border="false" />

        <View
            android:layout_width="match_parent"
            android:layout_below="@id/etMobileNo"
            android:background="#338F92A1"
            android:layout_height="1dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:id="@+id/rlEmail"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rlMobileNo"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/glv10"
        app:layout_constraintRight_toRightOf="@id/glv90">

        <info.umer.carhakeem.UI.Custom.TextView_N
            android:layout_width="match_parent"
            android:text="Password"
            android:id="@+id/tvEmail"
            android:textColor="#8F92A1"
            android:layout_height="wrap_content"/>



        <info.umer.carhakeem.UI.Custom.EditText_N
            android:layout_width="match_parent"
            android:layout_below="@id/tvEmail"
            android:layout_height="40dp"
            android:id="@+id/etPassword"

            app:border="false"


            android:background="@android:color/transparent"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:layout_alignParentEnd="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_below="@id/etPassword"
            android:background="#338F92A1"
            android:layout_height="1dp"/>

    </RelativeLayout>

    <info.umer.carhakeem.UI.Custom.Button_N
        android:layout_width="0dp"
        android:id="@+id/btnForgetPassword"
        app:background_color="-1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/rlEmail"
        app:layout_constraintLeft_toRightOf="@id/glv10"
        app:layout_constraintRight_toLeftOf="@id/glv90"
        android:text="Forget Password"
        android:layout_height="50dp"
        />



    <info.umer.carhakeem.UI.Custom.Button_N
        android:layout_width="0dp"
        android:id="@+id/btnSignIn"
        app:background_color="0"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/btnForgetPassword"
        app:layout_constraintLeft_toRightOf="@id/glv10"
        app:layout_constraintRight_toLeftOf="@id/glv90"
        android:text="Sign In"
        android:layout_height="50dp"
        />

    <info.umer.carhakeem.UI.Custom.TextView_N
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnSignIn"
        android:layout_height="wrap_content"
        android:id="@+id/tvNotAnAccount"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/glv5"
        app:layout_constraintRight_toRightOf="@id/glv95"
        android:gravity="center"
        android:textSize="14sp"
        android:text="Dont Have an Account? Sign Up"

        />

    <info.umer.carhakeem.UI.Custom.Button_N
        android:layout_width="0dp"
        android:id="@+id/btnSignUp"
        app:background_color="0"

        app:layout_constraintTop_toBottomOf="@+id/tvNotAnAccount"
        app:layout_constraintLeft_toRightOf="@id/glv10"
        app:layout_constraintRight_toLeftOf="@id/glv90"
        android:text="Sign Up"
        android:layout_height="50dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>